<apex:page showHeader="false" sideBar="false" id="CustomSiteTemplate">
<apex:slds />
    <div class="slds-box slds-size_1-of-1">
        <div class="slds-text-heading_large">
            This is Name and Description of this site
        </div>
        <apex:insert name="Header"/>
    </div>
    <div class="slds-grid size_1-of-1">
        <div class="slds-col slds-box slds-size_2-of-8">
            <h1>Left SideBar</h1>
            <br/>
            <a href="https://vrpvisualpage-dev-ed--c.ap4.visual.force.com/apex/UseCustomSiteTemplate">Main</a>
            <br/>
            <a href="https://vrpvisualpage-dev-ed--c.ap4.visual.force.com/apex/UseCustomTemplate2">Info</a>
            <apex:insert name="Left"/>
        </div>
        <div class="slds-col slds-box slds-size_6-of-8">
            <apex:insert name="ContentArea"/>
        </div>
    </div>
    <div class="slds-box slds-size_1-of-1">
        <div class="slds-text-heading_large">
            Hello,  {!$User.FirstName} {!$User.LastName}
        </div>
        <apex:insert name="Footer"/>
    </div>

</apex:page>